<%= f.label :name, t("admin.products.name"), class:"mt-3" %>
<%= f.text_field :name, class:"mt-1 w-100" %>
<h5 class="text-danger mt-2 w-100 text-center fs-6"><%=  @product.errors.messages[:name][0] if @product.errors.messages[:name][0] %></h5>
<%= f.label :category, t("admin.products.category"), class:"mt-1" %>
<%= image_tag(@product.image.variant(:display), class: "w-25 h-25" ) if @product.image.present? %>
<%= f.file_field :image, accept: "image/png,image/jpeg" %>
<br/>
<%= f.select :category_id, options_for_select(all_select_of_category, selected: @product.category_id), class:"mt-1" %>
<br/>
<%= f.label :price, t("admin.products.price"), class:"mt-1" %>
<%= f.text_field :price, class:"mt-1 w-100" %>
<h5 class="text-danger mt-2 w-100 text-center fs-6"><%=  @product.errors.messages[:price][0] if @product.errors.messages[:price][0] %></h5>
<%= f.label :quantity, t("admin.products.quantity"), class:"mt-1" %>
<%= f.text_field :quantity, class:"mt-1 w-100" %>
<h5 class="text-danger mt-2 w-100 text-center fs-6"><%= @product.errors.messages[:quantity][0] if @product.errors.messages[:quantity][0] %></h5>
<%= f.label :description, t("admin.products.description"), class:"mt-1" %>
<%= f.text_area :description, class:"mt-1 w-100" %>
<h5 class="text-danger mt-2 w-100 text-center fs-6"><%= @product.errors.messages[:description][0] if @product.errors.messages[:description][0] %></h5>
<%= f.submit class:"mt-3"%>
