<div class="d-flex container-admin">
  <%= render "admin/layouts/sidebar" %>
  <aside class="col-md-10 ms-5" >
    <div class="d-flex align-items-center">
      <h2><%= t("orders.title") %></h2>
    </div>
    <hr/>
    <div class="d-flex" id="main-top-order">
      <div class="container-main-mid-search">
        <%= form_for(:order, method: :get) do |f| %>
          <span class="ms-2"><%= t("admin.products.name")%></span>
          <%= f.text_field :search %>
          <%= f.button class: "p-2 pe-4 ps-4 text-center " do %>
            <i class="bi bi-search text-black"></i>
          <% end %>
        <% end %>
      </div>
      <%= link_to "#", class:"ms-3 main-top-btn-add text-white bg-danger bg-gradient fw-bold" do %>
        <%= t("orders.remove_all") %>
      <% end %>
    </div>
    <div id="admin_error_explanation" class="w-100 d-flex justify-content-center">
      <%= render "admin/layouts/flash_admin" %>
    </div>
    <div class="d-flex flex-column align-items-center me-5" id="main-order" >
      <table class="mt-5 table-orders me-5">
        <tr class="d-flex ps-5 mb-3 ">
          <th class="sizing-table-first-column text-center"><%= t("products.ordinal_number") %></th>
          <th class="sizing-table-order text-center"><%= t("orders.customer") %></th>
          <th class="sizing-table-order text-center"><%= t("orders.address") %></th>
          <th class="sizing-table-order text-center"><%= t("orders.total_products") %></th>
          <th class="sizing-table-order text-center"><%= t("orders.total_price") %></th>
          <th class="sizing-table-order text-center"><%= t("products.action") %></th>
        </tr>
        <%= (render @orders) || t("orders.empty") %>
      </table>
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </aside>
</div>
<div class="modal fade" id="modal-comment" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= "Comment" %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-flex align-items-center">
        <textarea class="w-75" id="modal-text-area"></textarea>
        <input type="submit"  value=<%= t("modal.comment")%> id="modal-submit-button" class="text-center ms-5 p-2 pe-5 ps-5"/>
      </div>
    </div>
  </div>
</div>
