<%= form_for :search, class: "search-form", method: :get do |f| %>
  <div class="input-group">
    <%= f.search_field :name_or_description_or_category_name_cont, value: params.dig(:search, :name_or_description_or_category_name_cont), class: "form-control", placeholder: t("input.search") %>
    <%= f.submit t("button.search"), class: "btn" %>
  </div>
<% end %>
